cmake_minimum_required(VERSION 3.22)

set(CPACK_GENERATOR "TGZ")
set(CPACK_SOURCE_GENERATOR "TGZ")
set(CPACK_TGZ_COMPONENT_INSTALL ON)
set(CPACK_COMPONENTS_IGNORE_GROUPS 1)
set(CPACK_ARCHIVE_COMPONENT_INSTALL ON)
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "RoboticArm")
set(CPACK_PACKAGE_VENDOR "Piotr Henczel")
set(CPACK_PACKAGE_VERSION_MAJOR "0")
set(CPACK_PACKAGE_VERSION_MINOR "0")
set(CPACK_PACKAGE_VERSION_PATCH "1")

if (BUILD_ARM)
    set(CPACK_PACKAGE_FILE_NAME "RoboticArm-arm")
else()
    set(CPACK_PACKAGE_FILE_NAME "RoboticArm-x86")
endif(BUILD_ARM)

set(CPACK_COMPONENTS_ALL RoboticArm RoboticGui)